export CUSTOM_TOOL_DIR="$HOME/store/projects/dev/custom-tools"

export LANG="en_US.UTF-8"
export EDITOR="vi"
if command -v nvim &> /dev/null
then
    export EDITOR="nvim"
fi

export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CONFIG_HOME="$HOME/.config"

pathes=(
    "$HOME/bin"
    "$HOME/.local/bin"
    "$HOME/.cargo/bin"
    "$HOME/go/bin"
)

for p in $pathes; do
    export PATH=$PATH:$p
done
