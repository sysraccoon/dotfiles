# vim: filetype=neomuttrc
# muttrc file for account sysraccoon@gmail.com
set realname = "sysraccoon"
set from = "sysraccoon@gmail.com"
set sendmail = "msmtp -a sysraccoon@gmail.com"
alias me sysraccoon <sysraccoon@gmail.com>
set folder = "/home/raccoon/.local/share/mail/sysraccoon@gmail.com"
set header_cache = /home/raccoon/.cache/mutt-wizard/sysraccoon@gmail.com/headers
set message_cachedir = /home/raccoon/.cache/mutt-wizard/sysraccoon@gmail.com/bodies
set mbox_type = Maildir
set hostname = "gmail.com"
source /usr/share/mutt-wizard/switch.muttrc
set spoolfile = +INBOX
set postponed = +Drafts
set trash = +Trash
set record = +Sent
set pipe_decode = yes

macro index o "<shell-escape>mw -y sysraccoon@gmail.com<enter>" "run mbsync to sync sysraccoon@gmail.com"
macro index \eg "<enter-command>unset wait_key<enter><shell-escape>gpg --list-secret-keys; printf 'Enter email ID of user to publish: '; read eID; printf 'Enter fingerprint of GPG key to publish: '; read eFGPT; /usr/libexec/gpg-wks-client --create \$eFGPT \$eID | msmtp --read-envelope-from --read-recipients -a sysraccoon@gmail.com<enter>"  "publish GPG key to WKS provider"
macro index \eh "<pipe-message>/usr/libexec/gpg-wks-client --receive | msmtp --read-envelope-from --read-recipients -a sysraccoon@gmail.com<enter>" "confirm GPG publication"

mailboxes "=INBOX" "=[Gmail]/All Mail" "=[Gmail]/Drafts" "=[Gmail]/Important" "=[Gmail]/Sent Mail" "=[Gmail]/Spam" "=[Gmail]/Starred" "=[Gmail]/Trash"
